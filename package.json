{
	"name": "mpdf",
	"displayName": "mPDF",
	"description": "Merge selected documents into PDF",
	"publisher": "kkzk",
	"version": "0.0.3",
	"repository": {
		"url": "https://github.com/kkzk/mPDF"
	},
	"preview": true,
	"icon": "media/mPDF-large.png",
	"engines": {
		"vscode": "^1.66.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onView:fileExplorer"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "fileOrder.add",
				"title": "add pdf source",
				"icon": "$(add)"
			},
			{
				"command": "fileOrder.delete",
				"title": "delete pdf source",
				"icon": "$(remove)"
			},
			{
				"command": "fileOrder.select",
				"title": "select pdf source"
			},
			{
				"command": "fileOrder.publish",
				"title": "Publish PDF",
				"icon": "$(play)"
			},
			{
				"command": "fileOrder.merge",
				"title": "Merge PDF",
				"icon": "$(add)"
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "mPDF",
					"title": "Merge to PDF",
					"icon": "media/mPDF.svg"
				}
			]
		},
		"views": {
			"mPDF": [
				{
					"id": "fileExplorer",
					"name": "File Explorer",
					"icon": "media/mPDF.svg",
					"contextualTitle": "mPDF"
				},
				{
					"id": "fileOrder",
					"name": "file Order"
				}
			]
		},
		"menus": {
			"view/title": [
				{
					"command": "fileOrder.merge",
					"when": "view == fileOrder",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "fileOrder.add",
					"when": "view == fileExplorer && viewItem == file",
					"group": "inline"
				},
				{
					"command": "fileOrder.delete",
					"when": "view == fileOrder && viewItem == file",
					"group": "inline"
				},
				{
					"command": "fileOrder.publish",
					"when": "view == fileOrder && viewItem == file",
					"group": "inline"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js",
		"package": "vsce package --target win32-x64",
		"publish": "vsce publish --target win32-x64"
	},
	"devDependencies": {
		"@types/glob": "^7.2.0",
		"@types/mkdirp": "^0.5.2",
		"@types/mocha": "^9.1.0",
		"@types/node": "14.x",
		"@types/replace-ext": "^2.0.0",
		"@types/rimraf": "^2.0.2",
		"@types/vscode": "^1.66.0",
		"@typescript-eslint/eslint-plugin": "^5.16.0",
		"@typescript-eslint/parser": "^5.16.0",
		"@vscode/test-electron": "^2.1.3",
		"eslint": "^8.11.0",
		"glob": "^7.2.0",
		"mocha": "^9.2.2",
		"typescript": "^4.5.5"
	},
	"dependencies": {
		"exceljs": "^4.3.0",
		"mkdirp": "^0.5.1",
		"pdf-merger-js": "^3.4.0",
		"replace-ext": "^2.0.0",
		"rimraf": "^2.6.2"
	}
}
